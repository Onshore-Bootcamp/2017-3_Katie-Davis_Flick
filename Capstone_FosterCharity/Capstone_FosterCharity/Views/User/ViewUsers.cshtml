@using Capstone_FosterCharity.Models

@model Capstone_FosterCharity.ViewModels.UserVM
@{
    ViewBag.Title = "ViewUsers";
}

<link href="~/Content/ViewTables.css" rel="stylesheet" />

<h2 align="center">Users</h2>

@Html.ActionLink("Create a User", "CreateUser", "User", null, new { @class = "btn btn-Create", @style = "color:white" })

<table class="table table-condensed" id="UserList">
    <thead>
        <tr>

            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>House/Apt Number</th>
            <th>Street Name</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Role</th>
            <th>UserName</th>
            <th>Password</th>
            <th>Change</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody>

        @foreach (UserPO user in Model.UserList)
        {
            <tr>



                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@Html.DisplayFor(model => user.PhoneNumber)</td>
                <td>@user.HouseAptNumber</td>
                <td>@user.StreetName</td>
                <td>@user.City</td>
                <td>@user.State</td>
                <td>@user.Zip</td>
                <td>@user.Role</td>
                <td>@user.Username</td>
                <td>@user.Password</td>


                <td>
                    @Html.ActionLink("Update", "UpdateUser", "User", new { UserID = user.UserID }, new { @class = "btn btn-Update", @style = "color:white" })
                </td>
                <td class="col-sm-1">
                    @if (user.Role != 1)
                    {
                        <div class="round round-lg hollow green" align="center">
                            <a href="@Url.Action("DeleteUser", "User", new {UserId = user.UserID})">
                                <span class="glyphicon glyphicon-trash" onclick="return confirm('Are you sure you want to delete? This will delete all donations and items corresponding with the user ');"></span>
                            </a>
                        </div>
                    }
                    else
                    {


                    }
                </td>
            </tr>
        }
    </tbody>
</table>