@using Capstone_FosterCharity.Models

@model Capstone_FosterCharity.ViewModels.UserVM

@{
    ViewBag.Title = "ViewUserbyID";
}
<h2 align="center">Profile</h2>
<link href="~/Content/Site.css" rel="stylesheet" />

<div id="container">
    <div>
        @Html.HiddenFor(model => Model.User.UserID)
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.FirstName)
                    @Html.DisplayFor(model => Model.User.FirstName)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.LastName)
                    @Html.DisplayFor(model => Model.User.LastName)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.PhoneNumber)
                    @Html.DisplayFor(model => Model.User.PhoneNumber)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.HouseAptNumber)
                    @Html.DisplayFor(model => Model.User.HouseAptNumber)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.StreetName)
                    @Html.DisplayFor(model => Model.User.StreetName)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.City)
                    @Html.DisplayFor(model => Model.User.City)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.State)
                    @Html.DisplayFor(model => Model.User.State)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.Zip)
                    @Html.DisplayFor(model => Model.User.Zip)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.Username)
                    @Html.DisplayFor(model => Model.User.Username)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.Password)
                    @Html.DisplayFor(model => Model.User.Password)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                <div class="form-control">
                    @Html.LabelFor(model => Model.User.Role)
                    @Html.DisplayFor(model => Model.User.Role)
                </div>
            </div>
        </div>
        @if ((Int16)Session["Role"] == 3)
        {
        <div align="right">
            Please email Admin for more assistance...kljd17@gmail.com
        </div>
        }
        else
        {
        <div class="row">
            <div class="col-md-4 col-md-offset-5">
                @Html.ActionLink("Update Profile", "UpdateUser", "User", new { UserID = Session["UserID"] },new { @class = "btn btn-primary", @style = "color:white" })
            </div>
        </div>
        }
    </div>
</div>
