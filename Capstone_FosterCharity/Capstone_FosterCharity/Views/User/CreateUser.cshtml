@model Capstone_FosterCharity.ViewModels.UserVM
@{
    ViewBag.Title = "CreateUser";
}


<div class="container">

    <h2 align="center">Create a User</h2>

    @using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
    {
        @Html.HiddenFor(model => Model.User.UserID)

        <div class="col-xs-4">
            <div class="form-group">
                @Html.LabelFor(model => Model.User.FirstName)
                @Html.TextBoxFor(model => Model.User.FirstName, new { @placeholder = "First Name...", @class = "form-control" })
                @Html.ValidationMessageFor(model => Model.User.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => Model.User.LastName)
                @Html.TextBoxFor(model => Model.User.LastName, new { @placeholder = "Last Name...", @class = "form-control" })
                @Html.ValidationMessageFor(model => Model.User.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => Model.User.PhoneNumber)
                @Html.TextBoxFor(model => Model.User.PhoneNumber, new { @placeholder = "Phone Number...", @class = "form-control" })
                @Html.ValidationMessageFor(model => Model.User.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
            <div class="col-xs-4">
                <div class="form-group">
                    @Html.LabelFor(model => Model.User.HouseAptNumber)
                    @Html.TextBoxFor(model => Model.User.HouseAptNumber, new { @placeholder = "...", @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.User.HouseAptNumber, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => Model.User.StreetName)
                    @Html.TextBoxFor(model => Model.User.StreetName, new { @placeholder = "Street Name...", @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.User.StreetName, "", new { @class = "text-danger" })
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => Model.User.City)
                    @Html.TextBoxFor(model => Model.User.City, new { @placeholder = "City...", @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.User.City, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => Model.User.State)
                    @Html.TextBoxFor(model => Model.User.State, new { @placeholder = "Ex..MO.", @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.User.State, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => Model.User.Zip)
                    @Html.TextBoxFor(model => Model.User.Zip, new { @placeholder = "Zip...", @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.User.Zip, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Submit" />
                </div>
            </div>

            <div class="col-xs-4">
                <div class="form-group">
                    @Html.LabelFor(model => Model.User.Role)
                    @Html.DropDownListFor(model => Model.User.Role, new SelectList(new[]
                       { new {Value="3", Text="3"},
                       new {Value="2", Text="2"},
                       new {Value="1", Text="1"} }, "Value", "Text", Model), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.User.Role, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => Model.User.Username)
                    @Html.TextBoxFor(model => Model.User.Username, new { @placeholder = "Ex..K.davis17.", @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.User.Username, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => Model.User.Password)
                    @Html.TextBoxFor(model => Model.User.Password, new { @placeholder = "....", @class = "form-control" })
                    @Html.ValidationMessageFor(model => Model.User.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(model => model.User, Model.ErrorMessage, new { @class = "text-danger" })
                </div>
            </div>

    }
</div>